#!/usr/bin/env bash

git -C ~/checkouts/ferdi-recipes pull -q
for recipe in `ls ~/.config/Ferdi/recipes | grep -vE '^(franz-custom-website|temp)$'`; do
  diff -rq ~/.config/Ferdi/recipes/$recipe/ ~/checkouts/ferdi-recipes/recipes/$recipe/
  rsync -a ~/checkouts/ferdi-recipes/recipes/$recipe/ ~/.config/Ferdi/recipes/$recipe/
done
