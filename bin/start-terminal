#!/usr/bin/env bash

xdotool set_desktop 0
mate-terminal --maximize --working-directory=$HOME -t termdesk0 &
xdotool search --sync --onlyvisible --name termdesk0

for command in pine trest twork abook "pi:mosh pi -- screen -r" "camelina:cd /scratch/work/camelina; screen -S cameline pico notes.txt"; do
  title=`echo $command | sed -e 's/:.*//'`
  if [ "$title" == "$command" ]; then
    title=`echo $command | sed -E 's/.*[ \/]//'`
  fi
  command=`echo $command | sed -e 's/.*://'`
  sleep 0.5
  xdotool key --clearmodifiers ctrl+T \
    sleep 0.5 \
    type --clearmodifiers "$command"
  xdotool key --clearmodifiers Return
  xdotool key --clearmodifiers alt+t s \
    sleep 0.5 \
    type --clearmodifiers $title
  xdotool key --clearmodifiers Return
done

sleep 0.5
xdotool key --clearmodifiers alt+1 \
  sleep 0.5 \
  key --clearmodifiers ctrl+d

xdotool set_desktop 1
mate-terminal --maximize --working-directory=$HOME -t termdesk1 &
xdotool search --sync --onlyvisible --name termdesk1

for command in camalpine "htop:htop --sort-key PERCENT_CPU" bpytop "ZFATE:cd ~/checkouts/ZFATE; clear" "zmp_ph289-uxt-rnaseq:cd /scratch/work/zmp_ph289-uxt-rnaseq; screen -S zmp_ph289-uxt-rnaseq pico README.md" "cd; csd3 xmas2020-infection-rnaseq" "cd; csd3 lockdown3-infection-rnaseq" "cd; csd3 bsa-simulation-uxt" "infection-vcfs:cd /scratch/work/infection-vcfs; screen -S infection-vcfs pico notes.txt"; do
  title=`echo $command | sed -e 's/:.*//'`
  if [ "$title" == "$command" ]; then
    title=`echo $command | sed -E 's/.*[ \/]//'`
  fi
  command=`echo $command | sed -e 's/.*://'`
  sleep 0.5
  xdotool key --clearmodifiers ctrl+T \
    sleep 0.5 \
    type --clearmodifiers "$command"
  xdotool key --clearmodifiers Return
  xdotool key --clearmodifiers alt+t s \
    sleep 0.5 \
    type --clearmodifiers $title
  xdotool key --clearmodifiers Return
done

sleep 0.5
xdotool key --clearmodifiers alt+1 \
  sleep 0.5 \
  key --clearmodifiers ctrl+d
